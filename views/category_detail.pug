extends layout

block content

    .jumbotron
        .container
            h1 #{category.name===undefined ? '' : category.name.replace(/&#x27;/g, "'")}
    div(style='margin-left:20px;margin-top:20px')

    .container
        h4 #{category_books.length} Book(s)

        dl
            each book in category_books
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}

            else
                p This category has no books.